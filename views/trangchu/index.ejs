        <div class="container wow bounceInUp">
            <div class="row">
                <div class="col-sm">
                    <div class="card" id="status">
                        <div class="card-header">
                            <button class="btn btn-warning  " style="position: absolute;top: -23px;">Contest Đang/Sắp diễn ra</button>
                        </div>
                        <div class="card-body">
                            <!-- Tab panes -->
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th>Name</th>
                                        <th>ID</th>
                                        <th>Thời gian bắt đầu</th>
                                        <th>Contest trong</th>
                                        <th>Tình trạng</th>
                                    </tr>
                                </thead>
                                <tbody id='contest'>
                                    <script>
                                    var socket = io();
                                    var interval;
                                    var contestReg = "<%= contestReg %>";
                                    var contest, html = "",
                                        timeLapse = 0,
                                        timeNow = Number("<%= timeNow %>"),
                                        timeStart, timeEnd, Day, _Date, Month, Year, Hour, Minute, diffTime, hours, minutes, seconds, stt, status, last, nlast, nhtml, ninterval;
                                        // console.log(timeNow)

                                    socket.on('nopbai_table', data => {
                                        if (deepCompare(data, nlast))
                                            return;
                                        nhtml = "";
                                        for (var i in data) {
                                        	ntime =  (timeNow+timeLapse) - new Date(data[i].thoigiannop).getTime();
                                        	nhour = Math.floor(ntime / (1000 * 60 * 60));
                                        	nminute = Math.floor((ntime - nhour * 3600 * 1000) / (1000 * 60));
                                            nhtml = nhtml + `<tr><td class='text-center'>${Number(i)+1}</td><td>${data[i].username}</td><td>${data[i].mabai}</td><td>` + (data[i].status == 0 ? "Đang chờ chấm" : (data[i].status == 1 ? "Đang chấm" : (data[i].status == 2 ? data[i].diem : "Dịch lỗi!!"))) + `</td><td id='time${i}'>${(nhour>0?nhour+" giờ ":"") + nminute+" phút trước"}</td></tr>`;
                                        }
                                        $('#nopbai-tbody').html(nhtml);
                                        nlast = data;

                                        clearInterval(ninterval);
                                        ninterval = setInterval(()=>{
                                        	for (var i in data){
                                        		ntime =  (timeNow+timeLapse) - new Date(data[i].thoigiannop).getTime();
                                        		nhour = Math.floor(ntime / (1000 * 60 * 60));
                                        		nminute = Math.floor((ntime - nhour * 3600 * 1000) / (1000 * 60));
                                        		nhtml = (nhour>0?nhour+" giờ ":"") + nminute+" phút trước";
                                        		if (nhtml != $('#time'+i).html())
                                        			$('#time'+i).html(nhtml);
                                        	}
                                        }, 60000)
                                    })

                                    socket.on('contest_end', id=>{
                                        if (contestReg == id) {
                                            Swal.fire({
                                                title: "Contest bạn đăng kí ("+id+") đã kết thúc!!",
                                                text: "chuyển hướng tới bảng chấm bài??",
                                                type: "question",
                                                confirmButtonText: 'Ô cê',
                                                cancelButtonText: "Không mún xem điểm :(",
                                                showCancelButton: true,
                                                allowOutsideClick: false
                                            }).then(result=>{
                                                if (result.value)
                                                    window.location.assign("../bangchambai");
                                            })
                                        }
                                    })

                                    socket.on('contest_start', id=>{
                                    	console.log(id)  // chua lam cai thong bao contest
                                        if (contestReg == id) {
                                            Swal.fire({
                                                title: `Contest ${id} đã bắt đầu!!`,
                                                text: 'Chuyển hướng tới trang làm bài??',
                                                type: 'question',
                                                confirmButtonText: 'Ô cê',
                                                cancelButtonTefxt: "(dell có nút cancel :3)",
                                                showCancelButton: true,
                                                allowOutsideClick: false
                                            }).then(result => {
                                                if (result.value) {
                                                    window.location.assign("../lambai");
                                                }
                                            })
                                        }
                                    })

                                    socket.on('update', (data, time) => {
                                        // console.log(data);
                                        // console.log(contest);
                                        timeNow = time;
                                        timeLapse = 0;
                                        if (deepCompare(contest, data))
                                            return;
                                        if (contest)
                                            Swal.fire('Đã có contest mới!!!', 'Hãy lướt xuống để xem!!', 'warning');

                                        contest = data;
                                        // console.log(new Date(time));
                                        html = "";

                                        for (var i in contest) {
                                            timeStart = new Date(contest[i].time_start);
                                            timeEnd = new Date(contest[i].time_end);

                                            Day = timeStart.getDay() + 1; // chuyển Date sang các thông số cần thiết (time start)
                                            _Date = timeStart.getDate();
                                            Month = timeStart.getMonth() + 1;
                                            Year = timeStart.getYear() + 1900;
                                            Hour = timeStart.getHours();
                                            if (String(Hour).length == 1) Hour = "0" + Hour;
                                            Minute = timeStart.getMinutes();
                                            if (String(Minute).length == 1) Minute = "0" + Minute;

                                            diffTime = Math.abs(timeStart.getTime() - timeEnd.getTime()); // tính thời gian  contest diễn ra
                                            hours = Math.floor(diffTime / (1000 * 60 * 60));
                                            minutes = Math.floor((diffTime - hours * 3600 * 1000) / (1000 * 60));
                                            seconds = Math.floor((diffTime - hours * 3600 * 1000 - minutes * 60 * 1000) / 1000);

                                            stt = Number(i) + 1;
                                            html = html + "<tr><td class='text-center'>" + stt + "</td>";
                                            html = html + "<td>" + contest[i].name + "</td>";
                                            html = html + "<td>" + contest[i].id + "</td>";
                                            html = html + "<td>" + (Day == 1 ? "Chủ Nhật" : ("Thứ " + Day)) + ", ngày " + _Date + "/" + Month + "/" + Year + " lúc " + Hour + ":" + Minute + "</td>";
                                            html = html + "<td>" + (hours != 0 ? (hours + " tiếng ") : "") + (minutes != 0 ? (minutes + " phút ") : "") + (seconds != 0 ? (seconds + " giây") : "") + "</td>";
                                            html = html + "<td id = 'status" + stt + "'></td></tr>";
                                            $('#contest').html(html);
                                        }

                                        clearInterval(interval);
                                        interval = setInterval(() => { // cap nhat tinh trang
                                            if (!contest) return;
                                            timeLapse += 1000;
                                            for (var i in contest) {
                                                if (timeNow + timeLapse > contest[i].time_start) {
                                                    let t = timeNow + timeLapse - contest[i].time_start;
                                                    let thours = Math.floor(t / (1000 * 60 * 60));
                                                    String(thours).length == 1 ? thours = '0' + thours : "";
                                                    let tminutes = Math.floor((t - thours * 3600 * 1000) / (1000 * 60));
                                                    String(tminutes).length == 1 ? tminutes = '0' + tminutes : "";
                                                    let tseconds = Math.floor((t - thours * 3600 * 1000 - tminutes * 60 * 1000) / 1000);
                                                    String(tseconds).length == 1 ? tseconds = '0' + tseconds : "";
                                                    status = "<p style = 'color:yellow'>Đang diễn ra (" + (thours > 0 ? thours + ":" : "") + tminutes + ":" + tseconds + "  )</p>";
                                                } else {
                                                    let t = contest[i].time_start - timeNow - timeLapse;
                                                    let thours = Math.floor(t / (1000 * 60 * 60));
                                                    String(thours).length == 1 ? thours = '0' + thours : "";
                                                    let tminutes = Math.floor((t - thours * 3600 * 1000) / (1000 * 60));
                                                    String(tminutes).length == 1 ? tminutes = '0' + tminutes : "";
                                                    let tseconds = Math.floor((t - thours * 3600 * 1000 - tminutes * 60 * 1000) / 1000);
                                                    String(tseconds).length == 1 ? tseconds = '0' + tseconds : "";
                                                    // console.log(contest[i].id);
                                                    let js = '$.post( "dangki",{data: `' + contest[i].id + '`, socketID:`' + socket.id + '`}, function( data ) {contestReg = "'+contest[i].id+'";Swal.fire(data)});'
                                                    status = "<a onclick = '" + js + "' style = 'color: green; font-size: 16px;'>Đăng kí (" + (thours > 0 ? thours + ":" : "")  + tminutes + ":" + tseconds + ")</a>";
                                                }
                                                if (timeNow + timeLapse > contest[i].time_end)
                                                    status = "<p style = 'color:red'>Đã kết thúc!!</p>";
                                                if (last != status || timeLapse == 1000)
                                                    $('#status' + (Number(i) + 1)).html(status);
                                                last = status;
                                            }
                                        }, 1000);
                                    })
                                    </script>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
